@model List<TweetrGeetr.Models.DataFixer.Datum>

<h1 class="display-2 m-5 font-weight-bold">Search Results</h1>
<h4 class="h1 m-5">You searched for: <span class="text-primary">" @ViewBag.SearchQuery "</span></h4>

@if (Model.Count > 0)
{
    @foreach (var tweet in Model)
    {
        <partial name="_TweetCard" model="tweet" />
    }
}
else
{
        <div class="d-flex align-items-center justify-content-center vh-50">
            <div class="text-center">
                <h1 class="display-1 fw-bold">404</h1>
                <p class="fs-3"> <span class="text-danger">Opps!</span> Tweets not found.</p>
                <p class="lead">
                    Unfortunately there are no tweets matching your query.
                </p>
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Go Home</a>
            </div>
        </div>
}





